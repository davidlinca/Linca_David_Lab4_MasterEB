@model Linca_David_Lab4_MasterEB.DurationPredictionModel.ModelInput

@{
    ViewData["Title"] = "Duration Prediction Using ML.NET";
}

<h2>Trip Duration Prediction using ML.NET</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Time">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Passenger_count" class="control-label"></label>
                <input asp-for="Passenger_count" type="number" class="form-control" />
                <span asp-validation-for="Passenger_count" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trip_distance" class="control-label"></label>
                <input asp-for="Trip_distance" class="form-control" />
                <span asp-validation-for="Trip_distance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payment_type" class="control-label"></label>
                <select asp-for="Payment_type" class="form-control">
                    <option value="CSH">Cash</option>
                    <option value="CRD">Credit</option>
                </select>
                <span asp-validation-for="Payment_type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Check Duration" class="btn btn-default" />
            </div>
        </form>
    </div>
    <div class="col-md-offset-2 col-md-4">
        @if (ViewBag.Duration != null)
        {
            <h1>Result</h1>
            <h2>Trip Duration (secs): @ViewBag.Duration</h2>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}